{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"rootDir": "src",
		"outDir": "lib"
	},
	"files": ["./src/typings/dxt-js.d.ts", "./src/typings/restructure.d.ts"],
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"ts-node": { "esm": true }
}
